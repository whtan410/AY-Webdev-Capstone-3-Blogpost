<%- include('partials/header.ejs') %>


<div class="container mt-3">
  <form action="/create" method="POST">
    <div class="row">
      <div class="col-md-6 mb-3">
          <label for="title" class="form-label">Title:</label>
          <input type="text" class="form-control" id="title" name="title" placeholder="Title">
      </div>
      <div class="col-md-6 mb-3">
          <label for="dop" class="form-label">Date of Writing:</label>
          <input type="date" class="form-control" id="dop" name="date">
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 mb-3">
        <label for="message">Post details:</label>
        <textarea id="message" name="details" placeholder="Details" rows="15" class="form-control"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center mb-5">
        <input type="submit" value="SUBMIT" class="btn btn-primary">
      </div>
    </div>
  </form>
</div>





